<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx" currentState="normal" autoDrawBackground="false">
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<fx:Script>
		<![CDATA[				
			override public function set data(value:Object):void {
				super.data = value;
				this.setStyle("contentBackgroundColor", 0xff0000);
			}

		]]>
	</fx:Script>
	
	<!-- Set the background color to the RGB color value.-->
	<s:Rect width="100%" height="100%" alpha="1">
		<s:fill>
			<s:SolidColor color="0x000000" />
		</s:fill>
	</s:Rect>
	
	<s:HGroup verticalAlign="middle" paddingTop="10" paddingBottom="10" contentBackgroundColor="0xff0000">
		<s:Image source="assets/icons/mobile_icn.png" width="50" height="50" alpha.hovered=".5"/>
		<s:VGroup width="350" paddingRight="5">
			<s:Label text="{data.naam}" color="0xFFFFFF" color.hovered="0xFFFFFF" color.selected="0xFFFFFF" verticalAlign="bottom" maxDisplayedLines="1" percentWidth="100"/>
			<s:Label text="{data.duur}" color="0x2BBDED" color.hovered="0x2BBDED" color.selected="0x2BBDED" verticalAlign="bottom" maxDisplayedLines="1" percentWidth="100"/>
			<s:Label text="{data.goedkoop}" color="0x00CD51" color.hovered="0x00CD51" color.selected="0x00CD51" verticalAlign="bottom" maxDisplayedLines="1" percentWidth="100"/>
		</s:VGroup>
		<s:Image source="assets/icons/arrow_icn_lt.png" width="14" height="26" alpha.hovered=".5"/>
	</s:HGroup>
	
</s:ItemRenderer>